<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frecuencia"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/txt_name"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_left"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/txv_increase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/txt_view_num"
                android:hint="0-350 Hz"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_right"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Longitud de Pulso"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/txt_name_p"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_min_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_left"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/txv_increase_p"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/txt_view_num"
                android:hint="0-500 Î¼z"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_max_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_right"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp"/>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>